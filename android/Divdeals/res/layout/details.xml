<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout 
         
         android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        
        android:layout_gravity="center"
        >
        <ImageView
	  	android:id="@+id/img_big"
	  	android:layout_width="300dp"
	  	android:layout_height="fill_parent"
	  	android:layout_centerHorizontal="true"
	  	android:scaleType="fitXY"
	  	
	  	android:src="@drawable/ic_launcher"
	  	
	  	android:textColor="#000000"/>
        
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/rel_lay_key"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" 
        
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        >
    <TextView
        android:id="@+id/txt_dealname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"  
        android:text="Fire Restaurant"
        android:layout_centerHorizontal="true"
        
         />
    

    
</RelativeLayout>
<RelativeLayout
        android:id="@+id/rel_lay_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" 
        
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        >
    
    <LinearLayout
        android:id="@+id/rel_lay_send"
        android:layout_below="@+id/txt_dealname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        
       
        >
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:gravity="center"
        android:text="rate"
        android:textSize="20sp"
        
         />
<!--     <ImageView -->
        
<!--         android:layout_width="2dp" -->
<!--         android:layout_height="45dp" -->
<!--         android:textColor="#000000" -->
<!--         android:layout_weight="1" -->
<!--         android:gravity="center" -->
<!--         android:src="@drawable/trans" -->
        
<!--          /> -->
<View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="#808080"
    />
    <TextView
        android:id="@+id/txt_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:gravity="center"
        
        android:text="discount"
        android:textSize="20sp"
         />
<!--     <ImageView -->
        
<!--         android:layout_width="2dp" -->
<!--         android:layout_height="25dp" -->
<!--         android:textColor="#000000" -->
<!--         android:layout_weight="1" -->
<!--         android:gravity="center" -->
<!--         android:src="@drawable/trans" -->
        
<!--          /> -->
    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:background="#808080"
        
    />
    <TextView
        android:id="@+id/txt_dayleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:gravity="center"
        android:text="time left"
        android:textSize="20sp"
        
         />
    
    
</LinearLayout>
<!-- <ImageView -->
        
<!--         android:layout_below="@+id/rel_lay_send" -->
<!--         android:layout_width="fill_parent" -->
<!--         android:layout_height="wrap_content" -->
        
<!--         android:background="@drawable/trans1"  -->
       
<!--        /> -->
<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080"
        android:layout_below="@+id/rel_lay_send"
    />
    
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" 
        
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        >
    <TextView
        android:id="@+id/txt_placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_marginLeft="6dp"  
        android:text="Deal name"
         />
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt_placename"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="6dp"
        android:textSize="17sp"  
        android:text="Address"
         />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel_lay_key"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="bottom" 
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        >
    
    <LinearLayout
        android:id="@+id/rel_lay_send"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        
        android:background="@drawable/head_strip"
        
        >
    <ImageView
        android:id="@+id/img_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="10"
        
         />
    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:src="@drawable/facebook"
         />
    <ImageView
        android:id="@+id/img_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:src="@drawable/twitter"
         />
    <ImageView
        android:id="@+id/img_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"
        android:src="@drawable/tellafriend"
         />
    
    
</LinearLayout>
    
</RelativeLayout>

</LinearLayout>